---
const { title, descritpion, features, price, isForward } = Astro.props
---

<div>
  {isForward ? (
    <div class="rounded-t-2xl bg-cta p-1">
        <h2 class="text-xl font-bold text-primary text-center">Most popular</h2>
    </div>
    ) : null
  }
  <div class=`border-2 overflow-hidden bg-cta ${isForward ? 'rounded-b-2xl border-cta' : 'rounded-2xl border-neutral-700'}`>
    <div class="p-8 gap-8 rounded-xl flex flex-col bg-neutral-800">
      <header class="flex flex-col gap-4 text-white">
          <h2 class="text-2xl font-bold">{ title }</h2>
          <p class="opacity-50">{ descritpion }</p>
      </header>
      <div class="flex flex-col gap-4">
          <h3 class="text-3xl font-bold text-white">{ price }<span class="text-sm opacity-50"> / month </span></h3>
          <button class=`rounded-full w-full p-2 ${isForward ? 'bg-cta text-primary font-bold' : 'border bg-transparent text-white'}`>Get started</button>
      </div>
      <footer class="flex flex-col gap-4">
          <div class="flex gap-4 justify-center items-center">
              <span class="bg-neutral-700 flex-1 h-0.5"></span>
              <h4 class="opacity-50 text-white">Features</h4>
              <span class="bg-neutral-700 flex-1 h-0.5"></span>
          </div>
        <ul class="flex flex-col gap-4">
          {
            features.map((feature) => {
              return (
                <li class="flex gap-2 items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="p-1 rounded-full bg-cta">
                        <rect width="24" height="24" fill="none" />
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m5 12l5 5L20 7" />
                    </svg>
                    <p class="text-white text-sm opacity-50">{ feature }</p>
                </li>
              )
            })
          }
        </ul>
      </footer>
    </div>
  </div>
</div>


