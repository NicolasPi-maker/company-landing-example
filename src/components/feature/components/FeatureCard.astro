---
import { Image } from "astro:assets";
const { icon, title, description } = Astro.props;
---

<div class=" benefit-card p-6 rounded-2xl text-white flex flex-col gap-12 h-full w-full justify-between auto-rows-fr">
    <header class="flex justify-between items-center">
        <Image src={icon} alt="Assembly Icon" class="w-10 h-10" />
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="rotate-45 rounded-full p-1 bg-primary text-white">
            <rect width="24" height="24" fill="none" />
            <path fill="currentColor" fill-rule="evenodd" d="M12 5.714a1 1 0 0 1 1 1v12.5a1 1 0 0 1-2 0v-12.5a1 1 0 0 1 1-1" clip-rule="evenodd" />
            <path fill="currentColor" fill-rule="evenodd" d="M12 4.214a1 1 0 0 1 .707.293l4.5 4.5a1 1 0 0 1-1.414 1.415L12 6.628l-3.793 3.793a1 1 0 0 1-1.414-1.415l4.5-4.5A1 1 0 0 1 12 4.214" clip-rule="evenodd" />
        </svg>
    </header>
    <div>
        <h3  class="font-bold text-xl">{ title }</h3>
        <p class="opacity-50 text-sm pr-4">{ description }</p>
    </div>
</div>

<style>
  .benefit-card {
    background: rgba(255, 255, 255, 0.1);
  }
</style>
